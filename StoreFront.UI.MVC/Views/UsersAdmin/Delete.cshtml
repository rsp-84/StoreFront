@model StoreFront.UI.MVC.Models.ApplicationUser

@{
    ViewBag.Title = "Delete a User";
}

<hr />

<div class="container">
    <h2>@ViewBag.Title</h2>

    <h3 class="text-warning">Are you sure you want to delete this User?</h3>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-outline-warning mb-5" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-warning mb-5" })
            </div>
        }
    </div>
</div>
