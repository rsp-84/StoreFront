@{
    ViewBag.Title = "Home";
}

<!-- HERO SECTION -->
<div class="container">
    <section class="hero pb-3 bg-cover bg-center d-flex align-items-center" style="background: url(../../Content/img/heroImage.jpg)">
        <div class="container py-5">
            <div class="row px-4 px-lg-5">
                <div class="col-lg-6">
                    <p class="text-muted small text-uppercase mb-2">The Latest Lineup 2020</p>
                    <h1 class="h2 text-uppercase mb-3">Quality Products</h1><a class="btn btn-dark" href="@Url.Action("Index","Shop")">Browse collections</a>
                </div>
            </div>
        </div>
    </section>
    <!-- CATEGORIES SECTION-->
    <section class="pt-5">
        <header class="text-center">
            <p class="small text-muted small text-uppercase mb-1">Products Just For You</p>
            <h2 class="h5 text-uppercase mb-4">Browse our Favorite categories</h2>
        </header>
        <div class="row mb-5">
            <div class="col-md-4 mb-4 mb-md-0"><a class="category-item" href="@Url.Action("Mens_Clothing","Shop")"><img class="img-fluid" src="~/content/img/red_t_shirt.jpg" alt=""><strong class="category-item-title">Mens Clothes</strong></a>
            </div>
            <div class="col-md-4 mb-4 mb-md-0"><a class="category-item mb-4" href="@Url.Action("Camping","Shop")"><img class="img-fluid" src="~/content/img/tent.jpg" alt=""><strong class="category-item-title">Camping</strong></a><a class="category-item" href="@Url.Action("Backyard_Recreation","Shop")"><img class="img-fluid" src="~/content/img/trampoline.jpg" alt=""><strong class="category-item-title">Outdoor Fun</strong></a>
            </div>
            <div class="col-md-4"><a class="category-item" href="@Url.Action("Womens_Clothing","Shop")"><img class="img-fluid" src="~/content/img/lightblue_t_shirt.jpg" alt=""><strong class="category-item-title">Womens Clothes</strong></a>
            </div>
        </div>
    </section>
</div>