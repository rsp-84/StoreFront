@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete Role";
}

<hr />

<div class="container">
    <h2>@ViewBag.Title</h2>

    <h3 class="text-warning">Are you sure you want to delete this Role? </h3>
    <p>Deleting this Role will remove all users from this role. It will not delete the users.</p>
    <div>
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-outline-warning mb-5" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-warning mb-5" })
            </div>
        }
    </div>
</div>
