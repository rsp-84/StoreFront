@model SF.DATA.EF.Category

@{
    ViewBag.Title = "Delete Categories";
}

<hr />
<div class="container">
    <h2>@ViewBag.Title</h2>

    <h3 class="text-warning">Are you sure you want to delete this?</h3>
    <div>
        <dl class="ml-3">
            <dt>
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CategoryName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CatDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CatDescription)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MainCategory.MainCategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MainCategory.MainCategoryName)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-outline-warning mb-5" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-warning mb-5" })
            </div>
        }
    </div>
</div>
